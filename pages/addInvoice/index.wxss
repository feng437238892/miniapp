  padding-top: 30rpx;
  padding-bottom: 30rpx;
}

.invoicelist-item-title {
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  color: #4b4b4b;
  letter-spacing: 0px;
  text-align: left;
  padding-bottom: 10rpx;
}

.invoicelist-type {
  font-family: PingFangSC-Medium;
  font-size: 24rpx;
  color: #8b8b8b;
