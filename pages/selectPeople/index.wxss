.selectPeople-box {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 100rpx;
  margin-bottom: 40rpx;
  border-radius: 10rpx;
  padding: 20rpx 40rpx;
  background: #ffffff
}

.box-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.box-padding {
  width: 670rpx;
  padding-top: 150rpx;
  padding-bottom: 160rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
}

.cell-body-text {
  display: block;
  font-size: 30rpx;
  color: #4B4B4B;
  line-height: 30rpx;
  padding-bottom: 5rpx;
  padding-top: 5rpx;
}

.selectPeople-btn {
  position: fixed;
  color: #F2F2F2;
  bottom: 60rpx;
}

.paddings {
  padding-left: 40rpx;
  padding-right: 40rpx;
}

.add-container {
  position: fixed;
  top: 40rpx
}

.cricle {
  display: flex;
  background: #08B49C;
  border-radius: 100%;
  width: 30rpx;
  height: 30rpx;
  color: #ffffff;
  font-size: 33rpx;
  margin-right: 10rpx;
  justify-content: center;
  line-height: 26rpx;
}

.add-people {
  display: flex;
  width: 210rpx;
  height: 70rpx;
  justify-content: center;
  align-items: center;
  font-family: PingFangSC-Medium;
  font-size: 22rpx;
  color: #08B49C;
  letter-spacing: 0;
  text-align: left;
  background: #ffffff;
  border-radius: 16rpx;
}