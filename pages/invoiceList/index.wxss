.box-padding {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  background: #fcfcfc;
  font-family: PingFangSC-Regular;
  padding-top: 20rpx;
  padding-bottom: 180rpx;
}

.voiceList-box {
  width: 670rpx;
  border-radius: 10rpx;
  background-color: #FFFFFF;
  color: #4B4B4B;
  font-size: 30rpx;
  position: relative;
  margin-bottom: 40rpx;
}

.voiceList-box-title {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.title_body {
  flex: 7;
}

.title_footer {
  flex: 1;
  height: 52rpx;
  position: relative;
}

.title_footer::before {
  content: "";
  position: absolute;
  top: 0rpx;
  right: 70rpx;
  border-left: solid 1px #DBDBDB;
  width: 1rpx;
  height: 100%;
}

.title-footer-image {
  position: absolute;
  top: 15rpx;
  right: 10rpx;
  width: 24rpx;
  height: 26rpx;
}

.voiceList-box-text {
  padding-top: 20rpx;
  padding-bottom: 30rpx;
}

.borderBottom {
  border-bottom: dotted 2px #EBEBEB;
  padding-top: 30rpx;
  padding-bottom: 20rpx;
}

.paddingRL {
  margin-left: 40rpx;
  margin-right: 32rpx;
}

.voiceList-btn {
  position: fixed;
  bottom: 84rpx;
  font-size: 28rpx;
}

.empty-bg {
  margin-top: 250rpx;
  width: 350rpx;
  height: 380rpx;
  margin-bottom: 30rpx;
}