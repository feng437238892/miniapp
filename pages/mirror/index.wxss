page {
  background: #373946;
  height: 100%;
}

.mirror {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
  width: 750rpx;
  background: #fff;
}

.hint {
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #000;
  letter-spacing: 0;
  text-align: center;
}

.hint-container {
  display: flex;
  flex-direction: row;
  padding-top: 80rpx;
  padding-bottom: 70rpx;
}

.hint-icon {
  width: 45rpx;
  height: 45rpx;
  margin-right: 10rpx;
}

.button-pos {
  position: fixed;
  bottom: 85rpx;
}

.mirror-img {
  width: 260rpx;
  height: 580rpx;
}